                </div>
        </nav>
        <div class="row mt-1">
            <div class="col-2"></div>
            <div class="col-8">
                <form action="/delete-movie" method="post" class="text-light" style="background-color: black;">
                    <div class="row">
                        <div class="col-6">
                            <h2 class="text-center">DeleteForm</h2>
                            <h4 class="text-center">Bạn có chắc chắn muốn xoá phim <%= movie.name_movie %> ?
                                    </h3>
                                    <input type="text" name="id_movie" hidden value="<%= movie.id_movie %>">
                                    <div class="d-flex align-items-center justify-content-center pb-3">
                                        <button class="btn btn-danger me-2" type="submit">Delete</button>
                                        <a class="btn btn-primary" href="/">Home</a>
                                    </div>
                        </div>
                        <div class="col-6">
                            <img src="<%= movie.poster %>" class="w-100" alt="">
                        </div>
                </form>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
